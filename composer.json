{
  "name": "kuaukutsu/poc-task",
  "description": "Proof of Concept: Task manager",
  "type": "library",
  "keywords": [
    "php",
    "proof of concept",
    "task",
    "event-loop"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Dmitriy Krivopalov",
      "email": "dimarik82@gmail.com"
    }
  ],
  "support": {
    "issues": "https://github.com/kuaukutsu/poc-task/issues",
    "source": "https://github.com/kuaukutsu/poc-task"
  },
  "require": {
    "php": ">=8.1",
    "ext-pcntl": "*",
    "kuaukutsu/ds-collection": "^2.0.3",
    "ramsey/uuid": "^4.7",
    "php-di/php-di": "^7.0.5",
    "revolt/event-loop": "^1.0",
    "symfony/console": "^6.4|^7.0",
    "symfony/process": "^6.4|^7.0",
    "symfony/property-access": "^6.4|^7.0",
    "symfony/serializer": "^6.4|^7.0"
  },
  "require-dev": {
    "ext-sync": "*",
    "ext-sqlite3": "*",
    "kuaukutsu/ds-dto": "^2.0.1",
    "vimeo/psalm": "^5.15",
    "friendsofphp/php-cs-fixer": "^3.13",
    "phpunit/phpunit": "^10.4",
    "rector/rector": "^1.0",
    "roave/infection-static-analysis-plugin": "^1.3",
    "roave/security-advisories": "dev-latest",
    "slevomat/coding-standard": "^8.7",
    "squizlabs/php_codesniffer": "^3.7"
  },
  "config": {
    "allow-plugins": {
      "infection/extension-installer": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "autoload": {
    "psr-4": {
      "kuaukutsu\\poc\\task\\": "src"
    },
    "files": [
      "src/tools/functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "kuaukutsu\\poc\\task\\tests\\": "tests"
    }
  }
}
